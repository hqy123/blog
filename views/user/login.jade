doctype html
html
  head
    title= 'signIn'
    link(rel='stylesheet', href='/bootstrap-3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', href='/font-awesome-4.7.0/css/font-awesome.min.css')
    style.
      .row{
        width:500px;
        margin:50px auto;
      }
      .logo{
        width:70px;
        height:70px;
        margin:0 auto;
      }
      button{
        float:left;
      }
      .link{
        float:right;
        line-height:35px;
        cursor:pointer; 
      }
  body
      div.row
        div.logo
          i.fa.fa-cog.fa-spin.fa-4x
        form(role='form', action='/users/signIn', method='post')
          div.form-group
            label username
            input(type='text',name='username').form-control.name
          div.form-group
            label password
            input(type='password',name='password').form-control.password
          div.form-group
            button(type='submit').btn.btn-default Sign In 
            p.link
              a(href='./register') Sign Up